@font-face {
  font-family: 'Comfortaa';
  src: url(<%= asset_path "Comfortaa-Regular.ttf" %>);
}

@font-face {
  font-family: 'Comfortaa';
  src: url(<%= asset_path "Comfortaa-Light.ttf" %>);
  font-weight: 300;
}

.blueprint-font {
  font-family: 'Comfortaa';
  font-weight: 300;
}

.sub-blueprint-font {
  font-weight: 100;
}

.uppercase {
  text-transform: uppercase;
}

.blueprint-light-blue {
  color: rgb(82, 185, 233);
}

.blueprint-dark-blue {
  color: rgb(27, 117, 188);
}

.large-logo-font {
  font-size: 100px;
  line-height: 140px;
}

.sub-logo-font {
  font-size: 28px;
  line-height: 36px;
  color: #8F8F8F;
}

.blueprint-logo {
  position: absolute;
  top: 130px;
  margin: auto;
  left: 50%;
  margin-left: -220px;
  text-align: center;
}

.medium {
  width: 150px;
}

.navbar {
  border-bottom: 1px solid #777777;
}

.navbar .nav>li>a {
  border-right: 1px solid #777777;
  padding: 10px 40px;
}

.navbar .nav>li:first-child>a {
  border-left: 1px solid #777777;
}

.home-page-arrows {
  margin-top: 25px;
}

.home-page-arrows i {
  margin: -12px;
}

.home-page-arrows i.first {
  -webkit-animation: fadein 1.5s infinite; /* Safari and Chrome */
  -moz-animation: fadein 1.5s infinite; /* Firefox */
  -ms-animation: fadein 1.5s infinite; /* Internet Explorer */
  -o-animation: fadein 1.5s infinite; /* Opera */
  animation: fadein 1.5s infinite;
}

.home-page-arrows i.second {
  -webkit-animation: fadein 1.5s 0.5s infinite; /* Safari and Chrome */
  -moz-animation: fadein 1.5s 0.5s infinite; /* Firefox */
  -ms-animation: fadein 1.5s 0.5s infinite; /* Internet Explorer */
  -o-animation: fadein 1.5s 0.5s infinite; /* Opera */
  animation: fadein 1.5s 0.5s infinite;
}

.home-page-arrows i.third {
  -webkit-animation: fadein 1.5s 1s infinite; /* Safari and Chrome */
  -moz-animation: fadein 1.5s 1s infinite; /* Firefox */
  -ms-animation: fadein 1.5s 1s infinite; /* Internet Explorer */
  -o-animation: fadein 1.5s 1s infinite; /* Opera */
  animation: fadein 1.5s 1s infinite;
}

@keyframes fadein {
  0% { opacity: 0; }
  50%   { opacity: 1; }
  100% { opacity: 0; }
}

/* Firefox */
@-moz-keyframes fadein {
  0% { opacity: 0; }
  50%   { opacity: 1; }
  100% { opacity: 0; }
}

/* Safari and Chrome */
@-webkit-keyframes fadein {
  0% { opacity: 0; }
  50%   { opacity: 1; }
  100% { opacity: 0; }
}

/* Internet Explorer */
@-ms-keyframes fadein {
  0% { opacity: 0; }
  50%   { opacity: 1; }
  100% { opacity: 0; }
}

/* Opera */
@-o-keyframes fadein {
  0% { opacity: 0; }
  50%   { opacity: 1; }
  100% { opacity: 0; }
}
