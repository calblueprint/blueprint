@font-face {
  font-family: 'Comfortaa';
  src: url(<%= asset_path "Comfortaa-Regular.ttf" %>);
}

@font-face {
  font-family: 'Comfortaa';
  src: url(<%= asset_path "Comfortaa-Light.ttf" %>);
  font-weight: 300;
}

#blueprint-berkeley-bg {
  position: absolute;
  top: 48px;
  height: 100%;
  width: 100%;
  background-image: url(<%= asset_path "blueprint_top.png" %>);
  z-index: -1;
  background-repeat: no-repeat;
  background-position-x: center;
  zoom: 110%;
}

.home-page-gear {
  margin-left: -70px;
}

.home-page-info {
  font-family: "Helvetica Neue","nimbus-sans",Helvetica,Arial,"Lucida Grande",sans-serif;
  color: rgb(27, 117, 188);
  text-transform: uppercase;
}

p.infosessions {
  font-family: "Helvetica Neue","nimbus-sans",Helvetica,Arial,"Lucida Grande",sans-serif;
  font-size: 20px;
  line-height: 24px;
  color: rgb(27, 117, 188);
}

a.apply-now, input.apply-now {
  display: inline-block;
  padding: 0.9em 2em 0.9em;
  border: 0;
  text-shadow: none;
  -moz-border-radius: 0.35em;
  -webkit-border-radius: 0.35em;
  border-radius: 0.35em;
  -moz-background-clip: padding;
  -webkit-background-clip: padding-box;
  background-clip: padding-box;
  color: #FFF;
  background-color: #4f6e94;
  text-transform: uppercase;
  font-weight: 500;
  margin-bottom: 15px;
  top: 0;
  font-size: .9em;
  font-family: "proxima-nova","Proxima Nova",sans-serif;
  -webkit-box-shadow: 0 0.16em 0 #3c4147;
  -moz-box-shadow: 0 0.16em 0 #3c4147;
  box-shadow: 0 0.16em 0 #3c4147;
}

a.apply-now:hover, input.apply-now:hover {
  position: relative;
  top: .1em;
  -webkit-box-shadow: 0 0.1em 0 #3c4147;
  -moz-box-shadow: 0 0.1em 0 #3c4147;
  box-shadow: 0 0.1em 0 #3c4147;
}

.blueprint-font {
  font-family: 'Comfortaa';
  font-weight: 300;
}

.sub-blueprint-font {
  font-weight: 100;
}

.uppercase {
  text-transform: uppercase;
}

.affix + .body-middle {
  padding-top: 50px;
}

.blueprint-light-blue {
  color: rgb(82, 185, 233);
}

.blueprint-dark-blue {
  color: rgb(27, 117, 188);
}

.large-logo-font {
  font-size: 100px;
  line-height: 140px;
}

.sub-logo-font {
  font-size: 28px;
  line-height: 36px;
  color: #8F8F8F;
}

.blueprint-logo {
  position: absolute;
  top: 130px;
  margin: auto;
  left: 50%;
  margin-left: -220px;
  text-align: center;
}

.medium {
  width: 150px;
}

.navbar {
}

.navbar .nav > li {
  border-bottom: .25em solid transparent;
}

.navbar .nav > li.active-li {
  border-bottom: 0.25em solid #3c4147;
}

.navbar .nav > li:hover {
  border-bottom: 0.25em solid #3c4147;
  -webkit-transition: all 0.4s ease-in-out;
  -moz-transition: all 0.4s ease-in-out;
  -o-transition: all 0.4s ease-in-out;
  transition: all 0.4s ease-in-out;
}

.navbar .nav {
  width: 100%;
}

.navbar .nav > li {
  text-align: center;
}

.navbar .nav > li.mainly-hidden {
  display: none;
}

.navbar .nav>li>a {
}

.nav>li>a:hover, .nav>li>a:focus {
  background-color: none;
}

.navbar .nav>li:first-child>a {
}

.separate-position {
  position: absolute;
  right: 100px;
  top: 10px;
}

.home-page-title {
  position: relative;
  z-index: 1;
  margin-left: 60px;
  margin-right: 60px;
  background: white;
}

.border-box {
  position: relative;
  margin-top: -30px;
  padding-top: 30px;
  z-index: -1;
  border: 3px solid rgb(27, 117, 188);
  height: 300px;
}

.button-border {
  border: 3px solid rgb(27, 117, 188);
  background: white;
  position: relative;
  margin: auto;
  width: 150px;
  margin-top: -35px;
}

.top-buffer {
  margin-top: 180px;
}

.engine {
  width: 300px;
}

.form-factor {
  width: 1000px;
}

.home-page-arrows {
  margin-top: 25px;
}

.home-page-arrows i {
  font-size: 2em;
  margin: -12px;
}

.home-page-arrows i.first {
  -webkit-animation: fadein 1.5s infinite; /* Safari and Chrome */
  -moz-animation: fadein 1.5s infinite; /* Firefox */
  -ms-animation: fadein 1.5s infinite; /* Internet Explorer */
  -o-animation: fadein 1.5s infinite; /* Opera */
  animation: fadein 1.5s infinite;
}

.home-page-arrows i.second {
  -webkit-animation: fadein 1.5s 0.5s infinite; /* Safari and Chrome */
  -moz-animation: fadein 1.5s 0.5s infinite; /* Firefox */
  -ms-animation: fadein 1.5s 0.5s infinite; /* Internet Explorer */
  -o-animation: fadein 1.5s 0.5s infinite; /* Opera */
  animation: fadein 1.5s 0.5s infinite;
}

.home-page-arrows i.third {
  -webkit-animation: fadein 1.5s 1s infinite; /* Safari and Chrome */
  -moz-animation: fadein 1.5s 1s infinite; /* Firefox */
  -ms-animation: fadein 1.5s 1s infinite; /* Internet Explorer */
  -o-animation: fadein 1.5s 1s infinite; /* Opera */
  animation: fadein 1.5s 1s infinite;
}

@keyframes fadein {
  0% { opacity: 0; }
  50%   { opacity: 1; }
  100% { opacity: 0; }
}

/* Firefox */
@-moz-keyframes fadein {
  0% { opacity: 0; }
  50%   { opacity: 1; }
  100% { opacity: 0; }
}

/* Safari and Chrome */
@-webkit-keyframes fadein {
  0% { opacity: 0; }
  50%   { opacity: 1; }
  100% { opacity: 0; }
}

/* Internet Explorer */
@-ms-keyframes fadein {
  0% { opacity: 0; }
  50%   { opacity: 1; }
  100% { opacity: 0; }
}

/* Opera */
@-o-keyframes fadein {
  0% { opacity: 0; }
  50%   { opacity: 1; }
  100% { opacity: 0; }
}


/* Responsive Media Queries */
@media (max-width: 1600px) {
  .large-logo-font {
    margin-top: 0px;
    margin-bottom: 0px;
    line-height: 130px;
  }

  .sub-logo-font {
    margin-top: 0px;
  }

  .blueprint-logo {
    top: 115px;
  }

  .medium {
    width: 125px;
  }
}

@media (max-width: 1366px) {
  .large-logo-font {
    font-size: 80px;
    line-height: 100px;
  }

  .sub-logo-font {
    font-size: 24px;
    line-height: 30px;
  }

  .blueprint-logo {
    margin-left: -176px;
    top: 100px;
  }

  .home-page-gear {
    margin-left: -30px;
  }

}

@media (max-width: 1200px) {
  .blueprint-logo {
    top: 80px;
  }

  .home-page-title {
    font-size: 32px;
  }
}

@media (max-width: 1024px) {
  .blueprint-logo {
    top: 60px;
    margin-left: -145px;
  }

  .large-logo-font {
    font-size: 64px;
    line-height: 80px;
  }

  .sub-logo-font {
    font-size: 20px;
    line-height: 25px;
  }

  .medium {
    width: 75px;
  }
}


/* When the navbar converts */
@media (max-width: 980px) {
  .navbar .nav > li:hover {
    border-bottom: .25em solid transparent;
  }

  .top-buffer {
    margin-top: 200px;
  }

  .nav-collapse, .nav-collapse.collapse {
    float: none;
  }

  .separate-position {
    display: none;
  }

  .navbar .nav>li>a, .navbar .nav>li:first-child>a {
    border: none;
  }

  .mobile-full-width {
    width: 100%;
    margin-left: 0px;
  }

  .navbar .nav > li.mainly-hidden {
    display: list-item;
  }

  .navbar .nav > li {
    width: inherit;
    text-align: inherit;
  }

  .mobile-header-row {
    margin-left: 0px;
  }

  .home-page-title {
    font-size: 28px;
    line-height: 32px;
    margin-left: 30px;
    margin-right: 30px;
  }

  .border-box {
    font-size: 22px;
    line-height: 26px;
    padding-left: 5px;
    padding-right: 5px;
  }

  .home-page-gear {
    display: none;
  }

  .wrapper {
    margin: 0 auto;
  }

}

@media (max-width: 768px) {
  .sub-logo-font {
    display: none;
  }

  .home-page-arrows {
    display: none;
  }

  .large-logo-font {
    float: left;
  }

  .logo-image {
    float: left;
  }

  .blueprint-logo {
    margin-left: -177px;
  }

  .header-top {
    margin-left: -20px;
    margin-right: -20px;
  }

  #blueprint-berkeley-bg {
    margin-left: -20px;
    margin-right: -20px;
  }

  .container-wrapper {
    margin-left: 20px;
    margin-right: 20px;
  }

  .home-page-title {
    margin-left: 200px;
    margin-right: 200px;
  }

  .border-box {
    height: 150px;
  }
}

@media (max-width: 640px) {
  .large-logo-font {
    font-size: 40px;
    line-height: 50px;
  }

  .medium {
    width: 50px;
  }

  .blueprint-logo {
    margin-left: -112px;
  }

  .home-page-title {
    margin-left: 100px;
    margin-right: 100px;
  }
}

@media (max-width: 480px) {
  .blueprint-logo {
    top: 35px;
  }

  .border-box {
    height: 175px;
  }
}
