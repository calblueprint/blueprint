<%- model_class = Sponsor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:link) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sponsors.each do |sponsor| %>
      <tr>
        <td><%= image_tag sponsor.image.url, :width => "128" %></td>
        <td><%= link_to sponsor.link %></td>
      <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_admin_sponsor_path(sponsor), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        admin_sponsors_path(sponsor),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_admin_sponsor_path,
              :class => 'btn btn-primary' %>