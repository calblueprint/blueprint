.container-fluid
  .page-header
    %h1 Applications
  %ul.nav.nav-tabs#application-tabs.container
    - first = true
    - Semester.all.each do |sem|
      - klass = first ? 'active' : ''
      %li{:class => klass}
        %a{:href => "#applications#{sem.id}", "data-toggle" => "tab"}
          ="#{sem.semester} #{sem.year}"
      - first = false
  .tab-content
    - first = true
    - Semester.all.each do |sem|
      - klass = first ? 'active' : ''
      .tab-pane{:id => "applications#{sem.id}", :class => klass}
        =render :partial => 'applications', locals: {applications: Application.semester(sem).order('created_at DESC')}
      - first = false