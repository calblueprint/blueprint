<div class="container sponsors">
  <div class="row-fluid">
    <div class="span10 offset1">
        <br>
        <p class="text-heading-yellow heading-mission">
          How To Sponsor
        </p>
        <p class="paragraph-font">
          Thank you for your interest in Blueprint!
          Please <a href="https://www.facebook.com/CalBlueprint">like</a>
          us on Facebook, and email us at <%= mail_to("team@calblueprint.org", "team@calblueprint.org")%>
          to get more information.
        </p>
    </div>
  </div>
  <hr class="featurette-divider">
  <div class="row-fluid">
    <div class="span10 offset1">
      <h2 class="text-heading-yellow featurette-heading-small">Gold Sponsors</h2>
      <div class="row-fluid">
        <ul class="thumbnails row-back">
          <li class="span4">
              <a href="" class="thumbnail-partner">
                <img src="assets/sponsor_asuc_300x300.png" class="">
              </a>
          </li>
        </ul>
      </div>
      <% @gold_sponsors.each do |row| %>
        <div class="row-fluid">
          <ul class="thumbnails row-back">
            <% row.each do |sponsor| %>
              <li class="span4">
                <% if sponsor %>
                  <a href="<%= sponsor.link %>" class="thumbnail-gold">
                    <%= image_tag sponsor.image.url %>
                  </a>
                <% else %>
                  <a href="" class="thumbnail-gold">
                    <%= image_tag 'paw_gold.png' %>
                  </a>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <hr class="featurette-divider">

  <div class="row-fluid">
    <div class="span10 offset1">

      <h2 class="text-heading-yellow featurette-heading-small">Silver Sponsors</h2>
      <% @silver_sponsors.each do |row| %>
        <div class="row-fluid">
          <ul class="thumbnails row-back">
            <% row.each do |sponsor| %>
              <li class="span2">
                <% if sponsor %>
                  <a href="<%= sponsor.link %>" class="thumbnail-silver">
                    <%= image_tag sponsor.image.url %>
                  </a>
                <% else %>
                  <a href="" class="thumbnail">
                    <%= image_tag 'paw_silver.png' %>
                  </a>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <hr class="featurette-divider">

  <div class="row-fluid">
    <div class="span10 offset1">

      <h2 class="text-heading-yellow featurette-heading-small">Partners</h2>
      <% @partners.each do |row| %>
        <div class="row-fluid">
          <ul class="thumbnails row-back">
            <% row.each do |sponsor| %>
              <li class="span2">
                <% if sponsor %>
                  <a href="<%= sponsor.link %>" class="thumbnail-partner">
                    <%= image_tag sponsor.image.url, :class => "image-partner" %>
                  </a>
                <% else %>
                  <a href="" class="thumbnail">
                    <%= image_tag 'paw_silver.png' %>
                  </a>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <hr class="featurette-divider">

</div><!-- /.container-fluid sponsors -->