.container
  .row.all-projects
    .span12
      h1.uppercase.blueprint-dark-blue.center.title Projects
      - @projects.each_slice(3) do |slice|
        .row.project-row
          - slice.each do |project|
            .span4
              .project
                = link_to project do
                  .project-text
                    h2.project-title= project.client
                    h4.project-type= project.app_type
                  = image_tag project.image.url, class: "project-image"
