<div class="container">
  <div class="row">
    <div class="span12">
      <h1 class="uppercase blueprint-dark-blue center">Projects</h1>

      <% @projects.each do |project| %>
        <div class="span4">
          <div class="project">
            <%= link_to project do %>
              <div class="project-text">
                <h2 class="project-title"><%= project.client %></h2>
                <h4 class="project-type"><%= project.app_type %></h4>
              </div>
              <%= image_tag project.image.url, class: "project-image" %>
            <% end %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
