<% if member %>

  <div class="span2">
    <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
      <div class="flipper">
        <div class="front">
          <img src="<%= member.image_path %>" alt="">
        </div>
        <div class="back">
          <div class="infobox-<%= rand(4) %>">
            <h2 class="text-heading-white text-left"><%= member.name %></h2>
            <p class="text-heading-white text-small text-left">
              <%= member.major %>
              <br>
              <%= "Class of " + member.year if member.year %>
            </p>
 
            <h5 class="text-heading-white text-bottom-right"><%= member.position %></h5>
          </div>
        </div>
      </div>
    </div>
  </div>

<% else %>

  <div class="span2">
    <a href="<%=join_path%>">
      <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
        <div class="flipper">
          <div class="front">
            <img src="assets/gray_box.jpg" alt="">
          </div>
          <div class="back">
            <div class="infobox-4">
              <h1 class="text-heading-white">This Could Be You!</h1>
            </div>
          </div>
        </div>
      </div>
    </a>
  </div>

<% end %>