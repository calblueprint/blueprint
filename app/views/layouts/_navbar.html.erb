<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a><%= link_to image_tag("blueprint_paw.png"), root_path, :class => "brand nav-logo" %></a>
      <ul class="nav">
        <li class="<%= 'active' if current_page?(about_path) %>"><%= link_to "About", about_path %></li>
        <li class="<%= 'active' if current_page?(projects_path) %>"><%= link_to "Projects", projects_path %></li>
        <li class="<%= 'active' if current_page?(team_path) %>"><%= link_to "Team", team_path %></li>
				<li class="<%= 'active' if current_page?(join_path) %>"><%= link_to "Join", join_path %></li>
        <li class="<%= 'active' if current_page?(support_path) %>"><%= link_to "Support", support_path %></li>
				<li class="<%= 'active' if current_page?(contact_path) %>"><%= link_to "Contact", contact_path %></li>
      </ul>
      <% if not current_user.nil? %>
        <div class="nav pull-right">
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= current_user.email %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Applications", applications_path %></li>
              <li><%= link_to "Members", members_path %></li>
              <li><%= link_to "Users", users_path %></li>
              <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
            </ul>
          </li>
        </div>
      <% else %>
        <ul class="nav pull-right">
          <li><%= link_to "Sign In", new_user_session_path %></li>
        </ul>
      <% end %>
    </div>
  </div>

  <% if flash[:notice] %>
    <p class="flash_notice"><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:error] %>
    <p class="flash_error"><%= flash[:error] %></p>
  <% end %>

</div>