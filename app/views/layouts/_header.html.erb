<div class="separate-position">
  <ul class="nav">
    <% if current_user.nil? %>
      <li class="nav signin"><%= link_to "Sign In", new_user_session_path %></li>
    <% else %>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="dropdown">
          <%= current_user.name %>
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Dashboard", dashboard_path %></li>
          <li><%= link_to "My Bio", edit_admin_user_path(current_user) %></li>
          <% if current_user.is_admin %>
            <li><%= link_to "Applications", admin_applications_path %></li>
            <li><%= link_to "Projects", admin_projects_path %></li>
            <li><%= link_to "Sponsors", admin_sponsors_path %></li>
            <li><%= link_to "Users", admin_users_path %></li>
            <li><%= link_to "Settings", settings_path %></li>
          <% end %>
          <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
        </ul>
      </li>
    <% end %>
  </ul>
</div>

<div class="header-top">
  <%= image_tag "blueprint_top.png", class: "click-header" %>
  <div class="blueprint-logo">
    <h1 class="blueprint-font large-logo-font"><span class="blueprint-dark-blue">blue</span>print</h1>
    <h4 class="sub-blueprint-font sub-logo-font uppercase">Technology For Non-Profits</h4>
    <div class="logo-image click-header">
      <%= image_tag "PAW_300x300.png", class: "gear spin-logo medium" %>
    </div>
    <%= link_to "#", class: "click-header" do %>
    <div class="home-page-arrows blueprint-dark-blue">
      <i class="icon-chevron-down large-icon single-line first"></i>
      <i class="icon-chevron-down large-icon single-line second"></i>
      <i class="icon-chevron-down large-icon single-line third"></i>
    </div>
    <% end %>
  </div>
</div>
