<div class="container applications">
  <div class="row-fluid">
    <div class="span10 offset1">
      <h1 class="featurette-heading-blue">Student Application</h1>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span10 offset1">
      <% if @application.errors.any? %>
          <div id="error_explanation" class="alert alert-error">
            <h2 class="text-heading-blue featurette-heading-smaller"><%= pluralize(@application.errors.count, "error") %> prohibited this application from being submitted:</h2>
            <p class="paragraph-font">
            <ul>
            <% @application.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
            </p>
          </div>
          <br>
        <% end %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span5 offset1">
			<%= render :partial => 'form' %>
    </div>
    <div class="span5">
      <div class="well sidebar-nav">
        <h2> Application Info </h2>
        <p class="paragraph-font">
          Applications are due by February 3rd 12:00pm. Please email
          <%= mail_to("team@calblueprint.org", "team@calblueprint.org")%> if you have any problems or questions.
          <br><br><br><br><br><br><br><br>
          <img src="/assets/paw.png" class="paw"/>
        </p>
      </div>
    </div>
  </div><!--/.row-fluid -->
<hr class="featurette-divider">
</div><!--/.container -->